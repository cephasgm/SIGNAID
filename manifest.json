  "related_applications": [],
  "display_override": ["standalone", "fullscreen", "window-controls-overlay"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "protocol_handlers": [
    {
      "protocol": "web+signaid",
      "url": "/?translate=%s"
    },
    {
      "protocol": "web+signaid-neural",
      "url": "/?neural=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "video",
          "accept": ["video/*", "image/*"]
        }
      ]
    }
  },
  "features": [
    "Neural Interface Integration",
    "Holographic Projection",
