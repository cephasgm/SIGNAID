  ],
  "shortcuts": [
    {
      "name": "Start Translation",
      "short_name": "Translate",
      "description": "Open translation interface",
      "url": "/?translate",
      "icons": [{ "src": "/icons/shortcut-translate.png", "sizes": "96x96" }]
    },
    {
      "name": "Learn Signs",
      "short_name": "Learn",
      "description": "Browse sign language lessons",
      "url": "/learn",
      "icons": [{ "src": "/icons/shortcut-learn.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "display_override": ["standalone", "fullscreen"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "protocol_handlers": [
    {
      "protocol": "web+signaid",
      "url": "/?translate=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "video",
          "accept": ["video/*"]
        }
      ]
    }
  }
