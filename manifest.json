    "Video Call Translation",
    "Cultural Adaptation",
    "Developer API",
    "Service Marketplace",
    "Live Broadcasting"
  ],
  "permissions": [
    "camera",
    "microphone",
    "bluetooth",
    "xr-spatial-tracking",
    "storage",
    "background-sync",
    "notifications"
  ]
